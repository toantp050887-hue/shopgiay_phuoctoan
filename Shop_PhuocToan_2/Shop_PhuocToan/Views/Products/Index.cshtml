@model ProductsIndexVM
@{
    ViewBag.Title = "Sản phẩm";
}

<div class="container px-0">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h1 class="h4 m-0">Danh sách sản phẩm</h1>
        <small class="text-muted">@Model.Total kết quả</small>
    </div>

    @using (Html.BeginForm("Index", "Products", FormMethod.Get, new { @class = "row g-2 align-items-end" }))
    {
        <div class="col-12 col-md-6">
            <label for="q" class="form-label">Từ khóa</label>
            <input id="q" name="q" type="text" value="@Model.Q" class="form-control"
                   placeholder="Nhập tên sản phẩm hoặc mã sản phẩm..." />
        </div>
        <div class="col-12 col-md-4">
            <label for="categoryId" class="form-label">Danh mục</label>
            @Html.DropDownList("categoryId",
                Model.Categories ?? Enumerable.Empty<SelectListItem>(),
                new { @class = "form-select", @id = "categoryId" })
        </div>
        <div class="col-12 col-md-2">
            <button type="submit" class="btn btn-primary w-100">Lọc</button>
        </div>
    }

    <hr class="my-3" />

    @Html.Partial("_ProductGrid", Model.Items)

    @{
        var totalPages = (int)Math.Ceiling(Model.Total / (double)Model.PageSize);
        if (totalPages < 1) { totalPages = 1; }
        int current = Model.Page;
        int start = Math.Max(1, current - 2);
        int end = Math.Min(totalPages, current + 2);
    }

    @if (totalPages > 1)
    {
        <nav aria-label="Product pagination" class="mt-3">
            <ul class="pagination">
                <li class="page-item @(current == 1 ? "disabled" : "")">
                    <a class="page-link"
                       href="@Url.Action("Index", new { q = Model.Q, categoryId = Model.CategoryId, page = current - 1, pageSize = Model.PageSize })">Trước</a>
                </li>

                @for (int i = start; i <= end; i++)
                {
                    <li class="page-item @(i == current ? "active" : "")">
                        <a class="page-link"
                           href="@Url.Action("Index", new { q = Model.Q, categoryId = Model.CategoryId, page = i, pageSize = Model.PageSize })">@i</a>
                    </li>
                }

                <li class="page-item @(current == totalPages ? "disabled" : "")">
                    <a class="page-link"
                       href="@Url.Action("Index", new { q = Model.Q, categoryId = Model.CategoryId, page = current + 1, pageSize = Model.PageSize })">Sau</a>
                </li>
            </ul>
        </nav>
    }
</div>
